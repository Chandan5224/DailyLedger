<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/signupFragment">

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.dev.dailyledger.ui.auth.ui.main.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_verificationFragment"
            app:destination="@id/verificationFragment" />
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPwdFragment"
        android:name="com.dev.dailyledger.ui.auth.ui.main.ForgotPwdFragment"
        android:label="fragment_forgot_pwd"
        tools:layout="@layout/fragment_forgot_pwd" >
        <action
            android:id="@+id/action_forgotPwdFragment_to_resetPwdFragment"
            app:destination="@id/resetPwdFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dev.dailyledger.ui.auth.ui.main.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgotPwdFragment"
            app:destination="@id/forgotPwdFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_verificationFragment"
            app:destination="@id/verificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPwdFragment"
        android:name="com.dev.dailyledger.ui.auth.ui.main.ResetPwdFragment"
        android:label="fragment_reset_pwd"
        tools:layout="@layout/fragment_reset_pwd" />
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.dev.dailyledger.ui.auth.ui.main.VerificationFragment"
        android:label="fragment_verification"
        tools:layout="@layout/fragment_verification" />
</navigation>